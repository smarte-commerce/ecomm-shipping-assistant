# Application Settings
APP_NAME=AI Shopping Assistant
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///./shopping_assistant.db
# For PostgreSQL: postgresql://user:password@localhost:5432/shopping_assistant
# For MySQL: mysql://user:password@localhost:3306/shopping_assistant

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For Redis with auth: redis://:password@localhost:6379
# For Redis Cluster: redis://localhost:6379,localhost:6380,localhost:6381

# AI Model API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# AI Model Settings
DEFAULT_AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=500
TEMPERATURE=0.7

# Discount Settings
MAX_DISCOUNT_PERCENTAGE=90.0
DEFAULT_DISCOUNT_EXPIRY_DAYS=30

# Recommendation Settings
MAX_RECOMMENDATIONS=10
SIMILARITY_THRESHOLD=0.5

# Chat Settings
MAX_CONVERSATION_HISTORY=50
SESSION_TIMEOUT_MINUTES=60

# Email/SMTP Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging Level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# External API Settings (for product data integration)
PRODUCT_API_URL=https://api.external-product-service.com
PRODUCT_API_KEY=your-product-api-key
PRODUCT_API_TIMEOUT=30

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# Environment
ENVIRONMENT=development
# Options: development, staging, production 